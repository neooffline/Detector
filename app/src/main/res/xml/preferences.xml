<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
    <PreferenceCategory android:title="Настройки">
        <EditTextPreference
                android:defaultValue="Default value"
                android:selectAllOnFocus="true"
                android:singleLine="true"
                android:title="Edit text preference" android:key="edit_text_preference_1"/>
        <SwitchPreference
                android:defaultValue="false"
                android:title="Switch preference" android:key="switch_preference_1"/>
        <ListPreference
                android:defaultValue="1"
                android:title="List preference" android:entries="@android:array/organizationTypes"
                android:entryValues="@android:array/organizationTypes" android:key="list_preference_1"/>
    </PreferenceCategory>
</PreferenceScreen>